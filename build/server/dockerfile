FROM alpine AS build
RUN apk add go build-base git
RUN git clone https://github.com/lanyulei/ferry.git
RUN cd ferry && CGO_ENABLED=0 GOOS=windows GOARCH=amd64 go build -ldflags="-s -w" -o ferry main.go

FROM python:3.8
COPY --from=build /ferry/ferry /ferry/
CMD [ "/ferry/ferry","server","-c=/config/settings.yml" ]